# Mallify Services - Environment Variables Template
# Copy this file to .env and fill in your values

# ============================================
# API Gateway Configuration
# ============================================
GATEWAY_PORT=3000
GATEWAY_HOST=localhost

# ============================================
# Database Configuration
# ============================================
MONGODB_URI=mongodb://localhost:27017/mallify
MONGODB_TEST_URI=mongodb://localhost:27017/mallify_test

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================
# RabbitMQ Configuration
# ============================================
RABBITMQ_URL=amqp://localhost:5672
RABBITMQ_USER=mallify
RABBITMQ_PASSWORD=mallify_password

# ============================================
# JWT Authentication
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-secret-key-change-this
JWT_REFRESH_EXPIRES_IN=30d

# ============================================
# OAuth Configuration
# ============================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# ============================================
# File Storage (AWS S3 / Cloudinary)
# ============================================
# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=mallify-uploads

# Cloudinary (Alternative)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ============================================
# Payment Gateways
# ============================================
# Stripe
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# PayPal
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox

# ============================================
# Notification Services
# ============================================
# Email (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@mallify.com
FROM_NAME=Mallify

# SMS (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Expo Push Notifications
EXPO_ACCESS_TOKEN=your-expo-access-token

# ============================================
# Maps & Location Services
# ============================================
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# ============================================
# AI Services
# ============================================
OPENAI_API_KEY=your-openai-api-key
DIALOGFLOW_PROJECT_ID=your-dialogflow-project-id
DIALOGFLOW_CREDENTIALS=path/to/credentials.json

# ============================================
# Service Ports
# ============================================
USER_SERVICE_PORT=3001
PRODUCT_SERVICE_PORT=3002
BOUTIQUE_SERVICE_PORT=3003
ORDER_SERVICE_PORT=3004
PAYMENT_SERVICE_PORT=3005
DELIVERY_SERVICE_PORT=3006
DRIVER_SERVICE_PORT=3007
NOTIFICATION_SERVICE_PORT=3008
CHAT_SERVICE_PORT=3009
REVIEW_SERVICE_PORT=3010
PROMOTION_SERVICE_PORT=3011
WISHLIST_SERVICE_PORT=3012
ANALYTICS_SERVICE_PORT=3013
AUDIT_SERVICE_PORT=3014
DISPUTE_SERVICE_PORT=3015

# ============================================
# Environment
# ============================================
NODE_ENV=development
LOG_LEVEL=debug

# ============================================
# CORS Configuration
# ============================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:19006

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# Session Configuration
# ============================================
SESSION_SECRET=your-session-secret-change-this
